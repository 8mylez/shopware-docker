#!/usr/bin/env bash

FILE="$0"

if [[ -L "$0" ]]; then
  FILE=$(readlink "$0")
fi

DIR=$(dirname ${FILE})

export DIR=${DIR}

source "${DIR}/.env"
source "${DIR}/docker.env"
source "${DIR}/functions.sh"

# Need to be in docker folder for docker-compose
cd ${DIR}

for command in ./modules/base/*.sh; do
    NAME=$(basename $command)
    NAME=${NAME%.*}

    if [[ $NAME == $1 ]]; then
        source ${command}
        exit 0
    fi
done

docker-compose exec cli bash /opt/swdc/swdc-inside "$@"